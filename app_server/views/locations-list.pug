extends layout
include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      h1= pageHeader.title
      small &nbsp;#{pageHeader.strapline}
  .row
    .col-12.col-md-8
    each location in locations
        .card
         .card-block
           h4
             a.location-name(href="/location")= location.name
             small &nbsp;
             +outputRating(location.rating)
             span.badge.badge-pill.badge-default.float-end= location.distance
           p.address= location.address
           .facilities
           +facilities(location.facilities, false)
    .col-12.col-md-4
        p.lead= otherContent.shortAbout



